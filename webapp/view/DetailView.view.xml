<mvc:View controllerName="todoapp.controller.DetailView" async="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:semantic="sap.f.semantic"
    xmlns:mvc="sap.ui.core.mvc">


    <Page id="detalInfor" title="{i18n>title}" showNavButton="true" navButtonPress=".goBack">
        <content>
            <semantic:SemanticPage id="pageDetails" headerPinnable="false" toggleHeaderOnTitleClick="false" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}">

                <semantic:headerContent>
                    <layout:HorizontalLayout allowWrapping="true">
                        <layout:VerticalLayout class="sapUiMediumMarginEnd">

                            <!-- <ObjectAttribute title="Status"/> -->

                            <ObjectStatus text="{
                                    parts :[
                                        { path : 'Status' }
                                    ],
                                    formatter: '.formatter.getStatusText'
                                }" state="{
                                    parts :[
                                        { path : 'Status' }
                                    ],
                                    formatter: '.formatter.getStatusColor'
                                }" icon="{
                                    parts :[
                                        { path : 'Status' }
                                    ],
                                    formatter: '.formatter.getStatus'
                                }" />
                            <ObjectAttribute title="End Date" text="{Endtime}"/>

                        </layout:VerticalLayout>

                        <layout:VerticalLayout>
                            <ObjectAttribute title="Description" text="{Description}"/>

                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>
                </semantic:headerContent>

                <semantic:titleHeading>
                    <Title text="{Title}" level="H2"/>
                </semantic:titleHeading>

                <semantic:titleMainAction>
                    <semantic:TitleMainAction id="chStatus" text="Change Status" press=".onChangeStatus"/>
                </semantic:titleMainAction>
                <!-- Semantic Footer Buttons
                <semantic:footerMainAction>
                    <semantic:FooterMainAction text="Change Status" press=".onChangeStatus"/>
                </semantic:footerMainAction> -->

            </semantic:SemanticPage>

        </content>
    </Page>

</mvc:View>