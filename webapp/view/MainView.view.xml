<mvc:View controllerName="todoapp.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" async="true"
    xmlns="sap.m">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <List items="{/TODOSet}" id="mainTodoList" headerText="TODO List" growing="true" growingThreshold="4" mode="SingleSelect" growingScrollToLoad="false">
                            <items>
                                <StandardListItem type="Active" title="{Title}" description="{Description}" press=".onItemSelected" info="{
                                    parts :[
                                        { path : 'Status' }
                                    ],
                                    formatter: '.formatter.getStatusText'
                                }" infoState="{
                                    parts :[
                                        { path : 'Status' }
                                    ],
                                    formatter: '.formatter.getStatusColor'
                                }" icon="{
                                            parts :[
                                                { path : 'Status' }
                                            ],
                                            formatter: '.formatter.getStatus'
                                        }" iconDensityAware="false" iconInset="false" />
                            </items>

                            <headerToolbar>
                                <OverflowToolbar>
                                    <Title text="TODO List" level="H2" />
                                    <ToolbarSpacer />
                                    <SearchField width="50%" search=".onUserFilter" />
                                    <Button text="Add new Todo" icon="sap-icon://add" press=".onNewTODO" />
                                    <Button text="Delete" icon="sap-icon://delete" press=".onPressDelete" />
                                </OverflowToolbar>
                            </headerToolbar>

                        </List>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
